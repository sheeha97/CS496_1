<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/image_view"
        android:layout_marginStart="60dp"
        android:text="@string/namestring"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_view_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignStart="@+id/text_view_name"
        android:text="@string/phonenumberstring"
        android:textSize='13sp'
        android:layout_alignLeft="@+id/text_view_name" />

    <TextView
        android:id="@+id/text_view_home_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/text_view_phone_number"
        android:layout_marginEnd="45dp"
        android:text="@string/home_numberstring"
        android:layout_marginRight="45dp"
        android:layout_alignParentRight="true"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_foreground" />

    <View
        android:id="@+id/divider"
        android:layout_width="298dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="54dp"
        android:background="?android:attr/listDivider"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="54dp" />

</RelativeLayout>